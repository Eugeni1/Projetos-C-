#include <iostream>
#include <string>

// Função para calcular a área de um retângulo
double calcularArea(double largura, double altura) {
    return largura * altura;
}

// Função para calcular o perímetro de um retângulo
double calcularPerimetro(double largura, double altura) {
    return 2 * (largura + altura);
}

int main() {
    // Declaração de variáveis
    std::string nome;
    double largura, altura;

    // Solicitação de dados ao usuário
    std::cout << "Digite seu nome: ";
    std::cin >> nome;
    std::cout << "Digite a largura do retângulo: ";
    std::cin >> largura;
    std::cout << "Digite a altura do retângulo: ";
    std::cin >> altura;

    // Cálculo da área e perímetro
    double area = calcularArea(largura, altura);
    double perimetro = calcularPerimetro(largura, altura);

    // Impressão dos resultados
    std::cout << "Olá, " << nome << "!" << std::endl;
    std::cout << "A área do retângulo é: " << area << std::endl;
    std::cout << "O perímetro do retângulo é: " << perimetro << std::endl;

    return 0;
}
